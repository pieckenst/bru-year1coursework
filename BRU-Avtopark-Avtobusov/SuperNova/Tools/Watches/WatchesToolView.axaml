<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:tools="clr-namespace:SuperNova.Tools"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="tools:WatchesToolViewModel"
             x:Class="SuperNova.Tools.WatchesToolView">
    <DataGrid VerticalScrollBarVisibility="Visible">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Expression" Width="*" />
            <DataGridTextColumn Header="Value" Width="*" />
            <DataGridTextColumn Header="Type" Width="*" />
            <DataGridTextColumn Header="Context" Width="*" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
